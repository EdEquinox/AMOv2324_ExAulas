<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A7A7A"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="end"
            android:text="@string/_0_0"
            android:background="#FFF496"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:id="@+id/screen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:columnCount="4"
            android:rowCount="5"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins">

            <Button
                android:layout_width="60dp"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mc"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnMC"
                />
            <Button
                android:layout_width="60dp"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mplus"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnMPlus"
                />
            <Button
                android:layout_width="60dp"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mminus"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnMMinus"
                />
            <Button
                android:layout_width="60dp"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mr"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnMR"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sin"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnSin"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cos"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnCos"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tan"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnTan"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xwhat"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnXwhat"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asin"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnAsin"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acos"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnAcos"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/atan"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnAtan"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xwhaty"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnXwhatY"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/x2"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnX2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/x3"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnX3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sqrt"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnSqrt"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/e"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnE"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lint"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnInt"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bin"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnBin"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hex"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnHex"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pi"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnPi"
                />

        </GridLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:columnCount="4"
            android:rowCount="5"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/c"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnClear"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusminus"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnPlusMinus"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnPercent"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/divide"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnDivide"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seven"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn7"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eight"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn8"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nine"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn9"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multiply"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnTimes"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/four"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn4"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/five"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn5"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/six"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn6"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minus"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnMinus"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnPlus"
                />
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btn0"
                android:layout_columnSpan="2"
                android:layout_gravity="center|top"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decimal"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnDecimal"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equals"
                android:textSize="15sp"
                android:background="@color/grey"
                android:fontFamily="sans-serif"
                android:id="@+id/btnEquals"
                />
        </GridLayout>


    </LinearLayout>

</LinearLayout>